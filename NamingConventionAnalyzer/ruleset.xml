<?xml version="1.0"?>
<ruleset name="Naming Convention Analyzer" xsi:noNamespaceSchemaLocation="../vendor/squizlabs/php_codesniffer/phpcs.xsd">
    <description>Checks for predefined naming convention</description>
    <autoload>./../autoload-bootstrap.php</autoload>

    <rule ref="Squiz.NamingConventions.ValidFunctionName.NotCamelCaps"/>
    <rule ref="Squiz.NamingConventions.ValidVariableName.NotCamelCaps"/>
    <rule ref="Squiz.NamingConventions.ValidVariableName.MemberNotCamelCaps"/>
    <rule ref="Squiz.NamingConventions.ValidVariableName.StringNotCamelCaps"/>
</ruleset>
